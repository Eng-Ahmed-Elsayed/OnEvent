@model GuestDto

@{
    ViewBag.Title = "Guest Info";
}

<div class="container">
    <div class="row align-items-center" style="height:60vh">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Your Info</h3>
                </div>
                <div class="card-body">
                    <h4>Guest Name: @Model.Name</h4>
                    <h4>Guest Email: @Model.Email</h4>
                    <h4>RSVP Status: @Model.RSVP.RSVPStatus</h4>
                    <h4>Meal Preference: @Model.MealPreference</h4>
                    <h4>Event: @Model.Event?.Title</h4>
                    <h4>Event Brief: @Model.Event.Brief</h4>
                    <h4>Event Location: @Model.Event.Location</h4>
                    <h4>Event Date: @Model.Event?.Date.ToString("yyyy-MM-dd"), @Model.Event?.Time</h4>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="EditInfo"
                    asp-route-id="@Model.Id"
                        class="btn btn-outline-success">Update Your Info</a>
                    <a asp-area="EventManagement"
                       asp-controller="Events"
                       asp-action="Details"
                       asp-route-id="@Model.EventId" class="btn btn-outline-info">Go To The Event</a>
                </div>
            </div>
        </div>
    </div>

</div>
