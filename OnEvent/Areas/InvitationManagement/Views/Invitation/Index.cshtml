@model ViewPagedList<InvitationDto>

@{
    ViewBag.Title = "Invitation List";
    string searchString = ViewBag.searchString;
    string orderBy = ViewBag.orderBy;
}

<div class="container pt-3">
    <h1>Invitation List</h1>
    <div class="d-flex justify-content-between">
        <span class="d-flex">
            <span class="me-2">
                <a asp-area="InvitationManagement"
                   asp-controller="Invitation"
                   asp-action="Create"
                   asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
                   class="btn btn-outline-primary">Create New</a>
            </span>
            <span>
                <form asp-action="RemindAll"
                      asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
                      method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-warning"
                            onclick="return confirm('Are you sure you want to send a reminder email to all guests?')">
                        Reminder All
                    </button>
                </form>
            </span>
        </span>
        @* Search *@
        <form asp-action="Index" method="get">
            <div class="input-group mb-3">
                <input type="text"
                       name="searchString"
                       value="@searchString"
                       class="form-control"
                       placeholder="Search for events">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-success">Search</button>
                </div>
            </div>
        </form>
    </div>
    @* Table *@
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                       asp-action="Index"
                       asp-route-OrderBy="@(orderBy == "guestemail" ? "GuestEmail desc" : "GuestEmail")"
                       asp-route-searchString="@searchString">Guest Email</a>
                </th>
                <th>
                    <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                       asp-action="Index"
                       asp-route-OrderBy="@(orderBy == "status" ? "status desc" : "status")"
                       asp-route-searchString="@searchString">Status</a>
                </th>
                <th>
                    <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                       asp-action="Index"
                       asp-route-OrderBy="@(orderBy == "responsedate" ? "responseDate desc" : "responseDate")"
                       asp-route-searchString="@searchString">ResponseDate</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr>
                    <td>@item.GuestEmail</td>
                    <td>@item.Status</td>
                    <td>@item.ResponseDate?.ToShortDateString()</td>
                    <td class="d-flex">
                        <a asp-action="Details" asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
                           asp-route-invitationId="@item.Id" class="btn btn-sm btn-outline-info me-3">Details</a>
                        <form asp-action="SendReminderEmail"
                              asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
                              asp-route-invitationId="@item.Id"
                              method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-warning"
                                    onclick="return confirm('Are you sure you want to send a reminder email to @item.GuestEmail?')">
                                Reminder
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    @* Pagination *@
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @{
                var prevDisabled = !Model.HasPrevious ? "disabled" : "";
                var nextDisabled = !Model.HasNext ? "disabled" : "";
            }
            <li class="page-item @prevDisabled">
                <a class="page-link" asp-action="Index"
                   asp-route-searchString="@searchString"
                   asp-route-orderBy="@orderBy"
                   asp-route-PageNumber="@(Model.CurrentPage - 1)"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchString="@searchString"
                       asp-route-orderBy="@orderBy"
                       asp-route-PageNumber="@i">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-searchString="@searchString"
                   asp-route-orderBy="@orderBy"
                   asp-route-PageNumber="@(Model.CurrentPage + 1)"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>