@model EventDto

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <p>@Model.Description</p>
                    <p>Date: @Model.Date.ToString("yyyy-MM-dd")</p>
                    <p>Location: @Model.Location</p>
                    <!-- Display the event image -->
                    @if (!string.IsNullOrEmpty(Model.ImgPath))
                    {
                        <img src="~/@Model.ImgPath" alt="Event Image" class="img-fluid">
                    }
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">RSVP</a>
                    <!-- You can add more buttons or actions here -->
                </div>
            </div>
        </div>
    </div>
</div>