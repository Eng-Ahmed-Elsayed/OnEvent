<script>
    // Client-side validation
    document.getElementById('ImageFile').addEventListener('change', function (event) {
        var fileInput = event.target;
        var fileSize = fileInput.files[0].size; // Get the size of the selected file
        var maxSize = 2 * 1024 * 1024; // 2 MB maximum size

        if (fileSize > maxSize) {
            alert('File size exceeds the maximum limit (2MB). Please select a smaller file.');
            fileInput.value = ''; // Clear the file input
        }
    });
</script>