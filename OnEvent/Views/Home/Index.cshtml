                    <div class="card card-gray">
                        <a href="#!">
                            <img src="~/img/categories/Virtual.jpg" class="card-img" alt="@CategoryOptions.Virtual">
                            <div class="card-img-overlay">
                                <h3 class="card-title">@CategoryOptions.Virtual</h3>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials section -->
    <div class="col-12">
        <div class="container-dark-gray">
            <h2 class="text-center mb-5">Testimonials</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card card-gray">
                        <img src="~/img/testimonials/person-1.jpg" class="card-img-top" alt="User 1">
                        <div class="card-body">
                            <p class="card-text">"This app is amazing! It has helped me manage my events effortlessly."</p>
