                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card card-gray">
                        <a href="#!">
                            <img src="~/img/categories/General.jpg" class="card-img" alt="@CategoryOptions.General">
                            <div class="card-img-overlay">
                                <h3 class="card-title">@CategoryOptions.General</h3>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card card-gray">
                        <a href="#!">
                            <img src="~/img/categories/Social.jpeg" class="card-img" alt="@CategoryOptions.Social">
                            <div class="card-img-overlay">
                                <h3 class="card-title">@CategoryOptions.Social</h3>
                            </div>
