                            <div class="card-img-overlay">
                                <h3 class="card-title">@CategoryOptions.Corporate</h3>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card card-gray">
                        <a href="#!">
                            <img src="~/img/categories/Educational.jpg" class="card-img" alt="@CategoryOptions.Educational">
                            <div class="card-img-overlay">
                                <h3 class="card-title">@CategoryOptions.Educational</h3>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card card-gray">
                        <a href="#!">
                            <img src="~/img/categories/Entertainment.jpg" class="card-img" alt="@CategoryOptions.Entertainment">
                            <div class="card-img-overlay">
                                <h3 class="card-title">@CategoryOptions.Entertainment</h3>
                            </div>
                        </a>
                    </div>
